<h1>Taxes#index</h1>
<div class="row">
  <div class="col-xs-3">
  </div>
      <div class="col-xs-6">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Percentage</th>
                <th>Action</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @taxes.each do |tax| %>
                <tr>
                  <td><%= tax.name %></td>
                  <td><%= tax.percentage %></td>
                  <td><%= link_to 'Show', tax %></td>
                  <%# if current_user && bprofile.user == current_user %>
                  <td><%= link_to 'Edit', edit_tax_path(tax) %></td>
                 <td><%= link_to 'Destroy' , tax, method: :delete, data: { confirm: 'Are you sure?' } %></td>


                </tr>
              <% end %>
            </tbody>
          </table>
      </div>

   <div class="col-xs-3">
   </div>